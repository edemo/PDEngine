      <artifactId>jetty-jmx</artifactId>
    </dependency>
    <dependency>
		    <groupId>javax.xml.ws</groupId>
		    <artifactId>jaxws-api</artifactId>
	</dependency>
	<dependency>
	<groupId>org.springframework.security</groupId>
	<artifactId>spring-security-web</artifactId>
  </dependency>
  <dependency>
